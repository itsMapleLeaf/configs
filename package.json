{
	"name": "@itsmapleleaf/configs",
	"version": "4.0.0",
	"description": "shared configs",
	"authors": "MapleLeaf",
	"type": "module",
	"exports": {
		"./prettier": {
			"types": "./prettier.d.ts",
			"default": "./prettier.config.mjs"
		},
		"./eslint": {
			"types": "./eslint.d.ts",
			"default": "./eslint.config.cjs"
		},
		"./tsconfig": "./tsconfig.json",
		"./biome": "./biome.json",
		"./tailwind-extensions": {
			"types": "./tailwind-extensions.types.d.ts",
			"default": "./tailwind-extensions.mjs"
		}
	},
	"files": [
		"eslint.config.cjs",
		"eslint.d.ts",
		"prettier.config.mjs",
		"prettier.d.ts",
		"tsconfig.json",
		"biome.json",
		"tailwind-extensions.mjs"
	],
	"scripts": {
		"lint": "run-s --continue-on-error lint:*",
		"lint:types": "tsc -b",
		"lint:biome": "biome check --apply ."
	},
	"dependencies": {
		"@tailwindcss/container-queries": "^0.1.1",
		"@typescript-eslint/eslint-plugin": "^6.7.5",
		"@typescript-eslint/parser": "^6.7.5",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-astro": "^0.29.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"prettier-plugin-astro": "^0.12.0",
		"prettier-plugin-jsdoc": "^1.1.1",
		"prettier-plugin-organize-imports": "^3.2.3",
		"prettier-plugin-tailwindcss": "^0.5.5"
	},
	"devDependencies": {
		"@biomejs/biome": "1.2.2",
		"@types/eslint": "^8.44.4",
		"@types/node": "^20.8.4",
		"eslint": "^8.51.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.3",
		"tailwindcss": "^3.3.3",
		"typescript": "^5.2.2"
	},
	"peerDependencies": {
		"eslint": "^8",
		"prettier": "^3",
		"tailwindcss": ">=3",
		"typescript": ">=5"
	},
	"peerDependenciesMeta": {
		"eslint": {
			"optional": true
		},
		"prettier": {
			"optional": true
		},
		"typescript": {
			"optional": true
		},
		"tailwindcss": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	}
}
