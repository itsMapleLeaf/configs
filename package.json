{
	"name": "@itsmapleleaf/configs",
	"version": "4.0.0",
	"description": "shared configs",
	"authors": "MapleLeaf",
	"type": "module",
	"exports": {
		"./prettier": "./prettier.config.mjs",
		"./eslint": "./eslint.config.cjs",
		"./tsconfig": "./tsconfig.json",
		"./biome": "./biome.json",
		"./tailwind-extensions": {
			"default": "./tailwind-extensions.mjs",
			"types": "./tailwind-extensions.types.d.ts"
		}
	},
	"files": [
		"eslint.config.cjs",
		"eslint.d.ts",
		"prettier.config.mjs",
		"prettier.d.ts",
		"tsconfig.json",
		"biome.json",
		"tailwind-extensions.mjs"
	],
	"scripts": {
		"lint": "run-s --continue-on-error lint:*",
		"lint:types": "tsc -b",
		"lint:biome": "biome check --apply ."
	},
	"dependencies": {
		"@tailwindcss/container-queries": "^0.1.1",
		"@typescript-eslint/eslint-plugin": "^6.6.0",
		"@typescript-eslint/parser": "^6.6.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-astro": "^0.29.0",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"prettier-plugin-astro": "^0.12.0",
		"prettier-plugin-jsdoc": "^1.0.1",
		"prettier-plugin-tailwindcss": "^0.5.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.1.2",
		"@types/eslint": "^8.44.2",
		"@types/node": "^20.5.9",
		"eslint": "^8.48.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.3",
		"tailwindcss": "^3.3.3",
		"typescript": "^5.2.2"
	},
	"peerDependencies": {
		"eslint": "^8",
		"prettier": "^3",
		"typescript": ">=5",
		"tailwindcss": ">=3"
	},
	"peerDependenciesMeta": {
		"eslint": {
			"optional": true
		},
		"prettier": {
			"optional": true
		},
		"typescript": {
			"optional": true
		},
		"tailwindcss": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	}
}
